<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomNavigationView" >
        <item name="android:background">@color/whiteDayBlackNight</item>
        <item name="itemIconTint">@color/gray</item>
        <item name="itemTextColor">@color/gray</item>

    </style>

    <style name="BottomNavigationText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="screenHeader">
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="work_on_the_application" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="developer" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="rounding_12">
        <item name="cornerSize">@dimen/offset_12</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayoutFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/blue</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="Yandex.Spinner" parent="Widget.AppCompat.ProgressBar">
        <item name="indicatorSize">36dp</item>
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Search" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounding_12</item>
        <item name="android:backgroundTint">@color/lightgrayDayGrayNight</item>
        <item name="android:drawableEnd">@drawable/search_icon</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:hint">@string/input_query</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:padding">@dimen/offset_16</item>
        <item name="android:textColorHint">@color/grayDayWhiteNight</item>
        <item name="android:textAppearance">@style/Primary.Regular.16</item>
    </style>
</resources>