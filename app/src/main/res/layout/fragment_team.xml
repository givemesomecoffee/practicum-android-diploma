<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDayBlackNight">

    <Toolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top_bar_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/offset_16"
            android:layout_marginTop="@dimen/offset_8"
            android:layout_marginEnd="@dimen/offset_8"
            android:layout_marginBottom="@dimen/offset_8"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="@string/team"
            android:textAppearance="@style/headline" />
    </Toolbar>

    <LinearLayout
        android:id="@+id/frame_86"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/offset_16"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:id="@+id/frame_85"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/worked_on_the_application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/offset_16"
                android:layout_marginVertical="@dimen/offset_8"
                android:gravity="top"
                android:lineSpacingExtra="6sp"
                android:text="@string/worked_on_the_application"
                android:textAppearance="@style/work_on_the_application" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_84"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/offset_16"
            android:layout_marginTop="@dimen/offset_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/first_developer"
                android:textAppearance="@style/developer" />

            <TextView
                android:id="@+id/second_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_16"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/second_developer"
                android:textAppearance="@style/developer" />

            <TextView
                android:id="@+id/third_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_16"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/third_developer"
                android:textAppearance="@style/developer" />

            <TextView
                android:id="@+id/fourth_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_16"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/fourth_developer"
                android:textAppearance="@style/developer" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>